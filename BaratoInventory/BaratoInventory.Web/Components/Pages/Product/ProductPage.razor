@page "/product"

<h3>Barato Inventory</h3>

@if (ProductModels == null)
{
    <p>Loading...</p>
}
@* else if (ProductModels.Count == 0)
{
    <p>No products available.</p>
} *@
else
{
    <a class="btn btn-primary" href="/product/create">Create</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Last Updated</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in ProductModels)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@($"₱{product.Price:N2}")</td>
                    <td>@product.Quantity</td>
                    <td>
                        @TimeZoneInfo.ConvertTimeFromUtc(product.LastUpdated,
                        TimeZoneInfo.FindSystemTimeZoneById("Singapore Standard Time")).ToShortDateString()
                    </td>
                    <td>
                        <a class="btn btn-secondary btn-sm" href="/product/update/@product.Id">Update</a>
                        <button class="btn btn-danger" @onclick="()=> { DeleteID = product.Id; Modal.Open();}">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <AppModal @ref="Modal">
         <Title>Notification</Title>
          <Body>
            This action cannot be undone. Delete this product?
          </Body>
           <Footer>
              <button type="button" class="btn btn-primary" style="width:80px" @onclick="HandleDelete">Yes</button>
               <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="() => Modal.Close()">Cancel</button>
            </Footer>
           </AppModal>
}
