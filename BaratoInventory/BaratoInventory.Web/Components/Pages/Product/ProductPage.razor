@page "/product"

<h3 class="mb-4 text-primary">Barato Inventory</h3>

@if (ProductModels == null)
{
    <p>Loading...</p>
}
@* else if (ProductModels.Count == 0)
{
    <p>No products available.</p>
} *@
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-primary" href="/product/create">
            <i class="bi bi-plus-lg me-1"></i> Create Product
        </a>
        <span class="text-muted">@ProductModels.Count product(s)</span>
    </div>

    <ul class="list-group">
        @foreach (var product in ProductModels)
        {
            <li class="list-group-item d-flex flex-column flex-md-row justify-content-between align-items-start mb-5 shadow-sm">
                <div class="ms-2 me-auto">
                    <div class="fw-bold h5 mb-1">@product.Name</div>
                    <div class="mb-1">
                        <span class="fw-bold">Category:</span>
                        <span class="badge bg-info text-dark">@product.Category</span>
                    </div>
                    <div class="mb-1"><span class="fw-bold">Price:</span> ₱@product.Price</div>
                    <div class="mb-1"><span class="fw-bold">Quantity:</span> @product.Quantity</div>
                    <div class="text-muted">
                        <span class="fw-bold">Last Updated:</span>
                        @TimeZoneInfo.ConvertTimeFromUtc(
                                 product.LastUpdated,
                                 TimeZoneInfo.FindSystemTimeZoneById("Singapore Standard Time")
                                 ).ToString("yyyy-MM-dd HH:mm")
                    </div>
                </div>

                <div class="d-flex flex-column flex-md-row gap-2 mt-2 mt-md-0">
                    <a class="btn btn-outline-secondary btn-sm" href="/product/view/@product.Id">View</a>
                    <a class="btn btn-outline-secondary btn-sm" href="/product/update/@product.Id">Update</a>
                    <button class="btn btn-danger btn-sm" @onclick="() => { DeleteID = product.Id; Modal.Open(); }">Delete</button>
                </div>
            </li>
        }
    </ul>

    <AppModal @ref="Modal">
        <Title>Notification</Title>
        <Body>
            This action cannot be undone. Delete this product?
        </Body>
        <Footer>
            <button type="button" class="btn btn-primary me-2" style="width:80px" @onclick="HandleDelete">Yes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="() => Modal.Close()">Cancel</button>
        </Footer>
    </AppModal>
}
